@model IEnumerable<AppUser>
<a class="btn btn-primary btn-sm p-2" asp-action="Create" asp-controller="User"><i class="fa-solid fa-user-plus"></i> Create User</a>
<hr />
<table class="table table-sm table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th style="width:300px">@Html.DisplayNameFor(itemModel=>itemModel.Id)</th>
            <th>@Html.DisplayNameFor(itemModel=>itemModel.UserName)</th>
            <th>@Html.DisplayNameFor(itemModel=>itemModel.FullName)</th>
            <th>@Html.DisplayNameFor(itemModel=>itemModel.Email)</th>
            <th style="width:150px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id </td>
                <td>@item.UserName</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Roles"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                        <form method="post" asp-action="Delete" style="display:inline-block;" onsubmit="return confirm('Emin misiniz?')">
                            <!--onsubmit="return confirm('Emin misiniz?')" -->
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i> Delete</button>
                    </form>
                
                </td>
            </tr>
        }
    </tbody>
</table>